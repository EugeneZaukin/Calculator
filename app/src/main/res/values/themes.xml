<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/teal_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="SchoolTheme" parent="Theme.Calculator">
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorAccent">#ffff00</item>
        <item name="android:background">@drawable/backgroundschool</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textViewStyle">@style/ViewStyleSchool</item>
    </style>

    <style name="ViewStyleSchool" parent="SchoolTheme">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@drawable/textwindowschool</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:padding">@dimen/padding_text_view_school</item>
    </style>

    <style name="SpaceTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">#000099</item>
        <item name="colorOnPrimary">#999999</item>
        <item name="colorPrimaryDark">#330066</item>
        <item name="colorAccent">@color/white</item>
        <item name="android:background">@drawable/backgroundspace</item>
        <item name="android:textSize">@dimen/button_text</item>
        <item name="android:textViewStyle">@style/ViewStyleSpace</item>
    </style>

    <style name="ViewStyleSpace" parent="SpaceTheme">
        <item name="android:textSize">@dimen/textSize</item>
        <item name="android:background">@drawable/textwindowspace</item>
        <item name="android:textColor">#ffff99</item>
        <item name="android:paddingTop">@dimen/padding_text_view_space_top</item>
        <item name="android:paddingEnd">@dimen/padding_text_view_space_end</item>
        <item name="android:paddingStart">@dimen/padding_text_view_space_start</item>
    </style>

    <style name="ButtonStyle">
        <item name="backgroundTint">#3399ff</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>